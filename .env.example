DATABASE_URL=postgres://user:password@host:5432/db?sslmode=require

# Auth0 configuration
# Use a strong secret and keep it the same between local and production.
AUTH0_SECRET=your-auth0-secret

# Base URL of the app
AUTH0_BASE_URL=http://localhost:3000
#AUTH0_BASE_URL=https://ai-news-hub-eta.vercel.app

# Auth0 issuer URL (e.g., https://your-tenant.auth0.com)
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com

# Auth0 application credentials (use the production app's values in production)
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

